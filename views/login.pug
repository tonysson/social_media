extends layouts/login-layout.pug 
block content
    .loginContainer
        h1 Login
        form(method="post")
            p.errorMessage #{errorMessage}
            input(type="text", name="logUsername", value = logUsername , placeholder="Username", required="")
            input(type="password", name="logPassword", value=logPassword, placeholder="password", required="")
            input(type="submit", value="Login")
        a(href="/register") Need an account ? Register here.